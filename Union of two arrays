class Solution {
    public static int doUnion(int arr1[], int arr2[]) {
HashSet<Integer> unionSet = new HashSet<>();
        
        // Add all elements of arr1 to unionSet
        for (int num : arr1) {
            unionSet.add(num);
        }
        
        // Add all elements of arr2 to unionSet
        for (int num : arr2) {
            unionSet.add(num);
        }
        
        // Return the size of unionSet, which gives us the number of unique elements in the union
        return unionSet.size();
    }
    }
